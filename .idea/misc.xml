<!-- ==========================================================
     ARQUIVO: misc.xml
     DESCRIÇÃO: Configuração geral do projeto no IntelliJ IDEA (ou PyCharm).
     FUNÇÃO: Define qual interpretador Python (SDK) o projeto e o plugin Black usam.
     ========================================================== -->



<?xml version="1.0" encoding="UTF-8"?> <!-- Informa que é um arquivo XML e usa codificação UTF-8 -->
<project version="4">      <!-- Marca o início da configuração geral do projeto -->
  <component name="Black">  <!-- Define as configurações do plugin Black (formatador de código Python) -->
    <option name="sdkName" value="Python 3.13 (LUMIassistente)" /> <!-- Nome do interpretador Python configurado -->
  </component>
  <component name="ProjectRootManager" version="2" project-jdk-name="Python 3.13 (LUMI-assistente)" project-jdk-type="Python SDK" /> <!-- Indica que o tipo do SDK é Python -->
</project>  <!-- Fecha o bloco principal do projeto -->